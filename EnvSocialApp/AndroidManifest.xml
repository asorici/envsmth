<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.envsocial.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8"
        		android:targetSdkVersion="15" />
    
    <permission android:name="com.envsocial.android.permission.C2D_MESSAGE" 
        android:protectionLevel="signature" />
    <permission android:name="com.envsocial.android.permission.NOTIFICATION" 
        android:protectionLevel="signature" />
    
    <uses-permission android:name="com.envsocial.android.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.envsocial.android.permission.NOTIFICATION" />
    
    <!-- App receives GCM messages. -->
	<uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
	
	<!-- GCM connects to Google Services. -->
	<uses-permission android:name="android.permission.INTERNET" /> 
	
	<!-- GCM requires a Google account. -->
	<uses-permission android:name="android.permission.GET_ACCOUNTS" />
	
	<!-- Keeps the processor from sleeping when a message is received. -->
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	
    <application
    	android:name="Envived"
        android:icon="@drawable/ic_envived_white"
        android:theme="@style/Theme.Envived"
        android:label="@string/app_name" >
        <activity
            android:name="com.envsocial.android.EnvSocialAppActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Searchable activities -->
        <activity android:name=".HomeSearchableActivity" 
        		  android:launchMode="singleTop" >
	        <intent-filter>
	            <action android:name="android.intent.action.SEARCH" />
	        </intent-filter>
	        <meta-data android:name="android.app.searchable"
	                   android:resource="@xml/searchable_main"/>
    	</activity>
    	
    	<activity android:name=".DetailsSearchableActivity"
    			  android:launchMode="singleTop" >
	        <intent-filter>
	            <action android:name="android.intent.action.SEARCH" />
	        </intent-filter>
	        <meta-data android:name="android.app.searchable"
	                   android:resource="@xml/searchable_feature"/>
    	</activity>
        
        <activity android:name=".HomeActivity" >
        	<meta-data android:name="android.app.default_searchable"
                   	   android:value=".HomeSearchableActivity" />	 
        </activity>
        
        <activity android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:noHistory="true" />
        <activity android:name=".RegisterActivity"
            android:screenOrientation="portrait"
            android:noHistory="true" />
        <activity android:name=".DetailsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
        	<meta-data android:name="android.app.default_searchable"
            		   android:value=".DetailsSearchableActivity" />
        </activity>
            
        <activity android:name=".features.program.EntryDetailsActivity" />
        
        <activity
            android:name=".features.order.ResolvedOrderDialogActivity"
            android:theme="@android:style/Theme.Dialog" />
        
        <receiver android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category android:name="com.envsocial.android" />
            </intent-filter>
        </receiver>
        
        <service android:name=".GCMIntentService"
            android:exported="false" />
        
        <service android:name=".EnvivedFeatureUpdateService"
            android:exported="false" />
        
        <receiver android:name=".utils.EnvivedNotificationDispatcher"
            android:permission="com.envsocial.android.permission.NOTIFICATION" >
            <intent-filter>
                <action android:name="com.envsocial.android.intent.RECEIVE_NOTIFICATION" />
                <category android:name="com.envsocial.android" />
            </intent-filter>
        </receiver>
    </application>

</manifest>