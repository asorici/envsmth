<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/presentation_details_speaker_row_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dip"
    android:layout_marginRight="5dip"
    android:layout_marginTop="5dip"
    android:layout_marginBottom="5dip">
    <ImageView 
        android:id="@+id/presentation_details_speaker_row_image"
        android:layout_width="64dip"
    	android:layout_height="64dip"
    	android:layout_marginRight="10dip"
    	android:scaleType="centerInside"
    	android:src="@drawable/placeholder_small" />
    <TextView 
        android:id="@+id/presentation_details_speaker_row_name"
        android:layout_width="fill_parent"
    	android:layout_height="64dip"
    	android:layout_marginLeft="10dip"
    	android:layout_gravity="center"
    	android:gravity="center_vertical"
    	android:textSize="16sp"
    	android:textStyle="bold"
    	android:clickable="true"
    	android:background="@drawable/feature_order_item_description" />
</LinearLayout> 