<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/order_tab_total_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip" >

        <TextView
            android:id="@+id/order_tab_total_label"
            android:layout_width="wrap_content"
            android:layout_height="45dip"
            android:layout_marginLeft="10dip"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:lines="2"
            android:text="TOTAL:"
            android:textSize="20sp"
            android:textStyle="bold" 
            android:textColor="@color/envived_order_text_white" />

        <TextView
            android:id="@+id/order_tab_total_price"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:layout_marginRight="10dip"
            android:layout_toRightOf="@id/order_tab_total_label"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:lines="2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/envived_order_text_white" />
    </RelativeLayout>