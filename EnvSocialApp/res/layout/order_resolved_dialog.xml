<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <TextView android:id="@+id/order_resolved_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:gravity="left"
        android:text="Your Order ..." />
	<TextView android:id="@+id/order_resolved_content"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dip"
	    android:layout_gravity="center_horizontal|center_vertical"
	    android:textStyle="bold" />
	<TextView android:id="@+id/order_resolved_footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:gravity="right|bottom"
        android:text="... is on the way." />
	<Button android:id="@+id/order_resolved_button"
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:text="OK"
	    />
</LinearLayout>