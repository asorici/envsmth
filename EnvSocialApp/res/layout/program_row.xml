<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/speaker_details_presentation_row_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dip"
    android:paddingRight="5dip"
    android:paddingTop="2dip"
    android:paddingBottom="2dip"
    
    android:background="@drawable/feature_program_presentation_list_item">
    
    <TextView 
        android:id="@+id/program_presentation_title"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="2dip"
    	android:layout_marginBottom="2dip"
    	android:lines="2"
    	android:textSize="16sp"
    	android:textStyle="bold"
    	android:ellipsize="end"
    />
    
    <TextView 
        android:id="@+id/program_presentation_session"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="2dip"
    	android:layout_marginBottom="2dip"
    	android:lines="2"
    	android:textSize="16sp"
    	android:textStyle="bold"
    	android:ellipsize="end"
    />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dip"
    	android:layout_marginBottom="2dip">
    	
        <LinearLayout 
            android:layout_width="0dip"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
        	android:orientation="horizontal"
        	android:layout_marginRight="5dip">
        
	    	<TextView 
		        android:id="@+id/program_presentation_start_hour"
		        android:layout_width="wrap_content"
		    	android:layout_height="match_parent"
		    	android:layout_marginRight="2dip"
		    	android:layout_gravity="left|center_vertical"
		    	android:textSize="12sp"
		    	android:textStyle="normal"
		    	android:gravity="left|center_vertical"
		    />
	    	
	    	<TextView 
		        android:layout_width="wrap_content"
		    	android:layout_height="match_parent"
		    	android:layout_marginLeft="2dip"
		    	android:layout_marginRight="2dip"
		    	android:layout_gravity="left|center_vertical"
		    	android:textSize="12sp"
		    	android:textStyle="normal"
		    	android:text=" - "
		    	android:gravity="center_horizontal|center_vertical"
		    />
	    	
	    	<TextView 
		        android:id="@+id/program_presentation_end_hour"
		        android:layout_width="wrap_content"
		    	android:layout_height="match_parent"
		    	android:layout_marginLeft="2dip"
		    	android:layout_marginRight="2dip"
		    	android:layout_gravity="left|center_vertical"
		    	android:textSize="12sp"
		    	android:textStyle="normal"
		    	android:gravity="right|center_vertical"
		    />
    	
    	</LinearLayout>
    	
	    <TextView 
	        android:id="@+id/program_presentation_locationName"
	        android:layout_width="wrap_content"
	    	android:layout_height="match_parent"
	    	android:layout_gravity="right|center_vertical"
	    	android:layout_marginLeft="5dip"
	    	android:textSize="12sp"
	    	android:textStyle="normal"
	    	android:gravity="right|center_vertical"
	    />    
    </LinearLayout>
    
</LinearLayout> 