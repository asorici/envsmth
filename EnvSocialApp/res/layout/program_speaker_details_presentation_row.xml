<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/speaker_details_presentation_row_wrapper"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dip"
    android:layout_marginRight="5dip"
    android:orientation="vertical">
    <TextView 
        android:id="@+id/speaker_details_presentation_row_title"
        android:layout_width="fill_parent"
    	android:layout_height="64dip"
    	android:lines="2"
    	android:textSize="16sp"
    	android:textStyle="bold"
    	android:ellipsize="end"
    	android:clickable="true"
    	android:background="@drawable/feature_order_item_description" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="32dip"
        android:orientation="horizontal"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip">
    	
    	<TextView 
	        android:id="@+id/speaker_details_presentation_row_time"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	    	android:layout_height="match_parent"
	    	android:layout_marginRight="5dip"
	    	android:layout_gravity="left|center_vertical"
	    	android:textSize="12sp"
	    	android:textStyle="normal"
	    	android:gravity="left|center_vertical"
	    />
    	
	    <TextView 
	        android:id="@+id/speaker_details_presentation_row_locationName"
	        android:layout_width="wrap_content"
	    	android:layout_height="match_parent"
	    	android:layout_gravity="right|center_vertical"
	    	android:layout_marginLeft="5dip"
	    	android:textSize="12sp"
	    	android:textStyle="normal"
	    	android:gravity="right|center_vertical"
	    />    
    </LinearLayout>
    
</LinearLayout> 