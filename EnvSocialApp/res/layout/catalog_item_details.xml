<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="@drawable/dialog_layout_rounded_corners"
    	android:orientation="vertical"
    	android:scrollbars="vertical"
        >
    
	    <TextView
	        android:id="@+id/item_description_label"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dip"
	        android:layout_marginTop="20dip"
	        android:text="Description"
	        android:textColor="@color/dark_green"
	        android:textSize="20dip"
	        android:textStyle="bold" />
	
	    <TextView
	        android:id="@+id/item_description_text"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dip"
	        android:layout_marginTop="5dip"
	        android:text="TextView" />
	
	    <TextView
	        android:id="@+id/item_rating_label"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dip"
	        android:layout_marginTop="20dip"
	        android:text="Consumption rating"
	        android:textColor="@color/dark_green"
	        android:textSize="20dip"
	        android:textStyle="bold" />
	
	    <RatingBar
	        android:id="@+id/item_usage_ratingbar"
	        
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        
	        android:layout_marginTop="5dip"
	        android:isIndicator="true"
	        android:max="5"
	        android:numStars="5"
	        android:rating="0.0"
	        android:stepSize="0.5" />
	
	    <Button
	        android:id="@+id/item_description_ok_button"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dip"
	        android:layout_marginRight="5dip"
	        android:layout_marginTop="20dip"
	        android:text="OK" />
	</LinearLayout>
</ScrollView>