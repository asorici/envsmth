<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="5dip"
	    android:scrollbars="none" >
	
	<LinearLayout android:id="@+id/presentation_details_root_layout" 
			android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dip"
		    android:layout_marginBottom="10dip"
		    android:orientation="vertical"
		    android:focusableInTouchMode="true" >
		
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="5dip"
		    android:orientation="vertical"
		    android:background="@drawable/feature_program_presentation_basic_info_wrapper">
		    
			<TextView android:id="@+id/title" 
			    android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:textStyle="bold"
				android:textSize="20sp"
				android:layout_marginTop="5dip" 
				android:layout_marginBottom="5dip"
				android:layout_marginRight="5dip"
				android:layout_marginLeft="5dip"
				 />
			
			<TextView
			    android:id="@+id/datetime"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="5dip"
			    android:layout_marginLeft="5dip"
			    android:layout_marginRight="5dip"
			    android:layout_marginTop="5dip" />
			
			<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:layout_marginTop="5dip"
			    android:layout_marginBottom="5dip"
			    android:layout_marginRight="5dip" 
				android:layout_marginLeft="5dip">
			    <TextView  
				    android:layout_width="100dip"
					android:layout_height="wrap_content"
					android:layout_marginRight="5dip"
					android:lines="2"
					android:layout_gravity="left|center_vertical"
					android:gravity="left|center_vertical"
					android:textStyle="bold"
					android:text="Session:"/>
			    
				<TextView android:id="@+id/session" 
				    android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:layout_marginLeft="5dip" 
					android:lines="2" 
					android:layout_gravity="left|center_vertical"
					android:gravity="left|center_vertical"/>
			</LinearLayout>
			
			<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:layout_marginTop="5dip"
			    android:layout_marginBottom="5dip"
			    android:layout_marginRight="5dip" 
				android:layout_marginLeft="5dip">
			    <TextView  
				    android:layout_width="100dip"
					android:layout_height="wrap_content"					
					android:layout_marginRight="5dip"
					android:lines="2"
					android:layout_gravity="left|center_vertical"
					android:gravity="left|center_vertical"
					android:textStyle="bold"
					android:text="Location:"/>
			    
				<TextView android:id="@+id/locationName" 
				    android:layout_width="fill_parent"
					android:layout_height="wrap_content" 
					android:layout_marginLeft="5dip" 
					android:lines="2" 
					android:layout_gravity="left|center_vertical"
					android:gravity="left|center_vertical"/>
			</LinearLayout>
			
		</LinearLayout>

		<TextView
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dip"
		    android:layout_marginBottom="5dip"
		    android:background="@drawable/feature_program_presentation_details_label"
		    android:text="Keywords"
		    android:textStyle="bold" />
		
		<TextView
		    android:id="@+id/tags"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="5dip"
		    android:padding="5dip"
		    android:textStyle="italic"
		    android:textColor="@color/white"
		    android:text="No keywords defined."/>

		<TextView
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dip"
		    android:layout_marginBottom="5dip"
		    android:background="@drawable/feature_program_presentation_details_label"
		    android:text="@string/lbl_abstract"
		    android:textStyle="bold" />

		<TextView android:id="@+id/presentation_abstract"
		    android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="5dip"
			
			android:padding="5dip"
			android:background="@drawable/feature_program_presentation_abstract_wrapper"
			android:textColor="@color/envived_order_text_dark_green"
			android:text="No abstract avaialable."
			 />
		
		<TextView
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dip"
		    android:layout_marginBottom="5dip"
		    android:background="@drawable/feature_program_presentation_details_label"
		    android:text="Speakers"
		    android:textStyle="bold" />
		
		
		<LinearLayout android:id="@+id/presentation_speakers_layout"
		    android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="5dip"
			android:orientation="vertical"
			android:background="@color/envived_button_white"
			
			android:divider="@color/envived_order_text_dark_green"
			android:dividerPadding="1dip"
			>		
		</LinearLayout>
		 
	</LinearLayout>
</ScrollView>
